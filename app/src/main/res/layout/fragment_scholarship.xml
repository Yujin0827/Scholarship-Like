<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/scholar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:context=".ScholarshipFragment" >

    <!-- 상단바 (알람, 좋아요) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_like"
            android:layout_gravity="right"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/alarm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_alarm"
            android:layout_gravity="right"
            android:padding="5dp"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- 장학금 상단 타이틀 -->
    <TextView
        android:id="@+id/scholarTitle_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#A0ACE0"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/title_input"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A0ACE0"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/scholarTitle_input"
        android:weightSum="10">

        <TextView
            android:id="@+id/scholarTitle_max"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="#A0ACE0"
            android:gravity="center"
            android:text="@string/title_max"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/scholarTitle_num"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#A0ACE0"
            android:gravity="center"
            android:text="@string/title_num"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar" />
        s<TextView
            android:id="@+id/scholarTitle_get"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="50dp"
            android:background="#A0ACE0"
            android:gravity="center"
            android:text="@string/title_get"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <!-- 내 장학금, 전체 장학금 탭 & 뷰페이저 -->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/scholar_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        app:tabIndicatorColor="@color/colorPrimaryDark">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_scholarship" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_scholarship" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/scholar_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/scholar_tabLayout"
        app:layout_constraintBottom_toBottomOf="@+id/scholar"/>



</androidx.constraintlayout.widget.ConstraintLayout>