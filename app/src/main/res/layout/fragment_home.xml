<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment" >

    <!-- 상단바 (로고, 검색창, 알람, 좋아요) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left|center"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_like" />

        <ImageView
            android:id="@+id/alarm"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_alarm" />

        <ImageView
            android:id="@+id/searchAll"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_search" />

    </androidx.appcompat.widget.Toolbar>

    <!-- 본문 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- banner -->
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/banner_slider"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:iss_auto_cycle="true"
                app:iss_period="2500"
                app:iss_delay="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/scholar_cnt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 장학금 최대 건수 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scholar_cnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/banner_slider"
                app:layout_constraintBottom_toTopOf="@+id/go_web" >
<!--
                <TextView
                    android:id="@+id/scholar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textStyle="bold" />
-->

                <!-- 이름 -->
                <LinearLayout
                    android:id="@+id/scholarship_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/scholarship_cnt" >

                    <TextView
                        android:id="@+id/scholar_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scholar_input_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scholar_input_name"
                        android:textColor="@color/text_black"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- 최대 건수 -->
                <LinearLayout
                    android:id="@+id/scholarship_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scholarship_name"
                    app:layout_constraintBottom_toTopOf="@+id/scholarship_get" >

                    <TextView
                        android:id="@+id/scholar_cnt_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scholar_cnt_max"
                        android:textColor="@color/text_black"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scholar_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scholar_cnt_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scholar_cnt_num"
                        android:textColor="@color/text_black"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- 받을 수 있어요! -->
                <LinearLayout
                    android:id="@+id/scholarship_get"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scholarship_cnt"
                    app:layout_constraintBottom_toBottomOf="parent" >

                    <TextView
                        android:id="@+id/scholar_get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scholar_get"
                        android:textColor="@color/text_black"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 이동 버튼 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/go_web"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/scholar_cnt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" >

                <ImageView
                    android:id="@+id/kosafWeb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_round_button_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/univWeb" />

                <ImageView
                    android:id="@+id/univWeb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_round_button_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/kosafWeb"
                    app:layout_constraintEnd_toStartOf="@+id/profile_change" />

                <ImageView
                    android:id="@+id/profile_change"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_round_button_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/univWeb" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- admob -->
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:adSize="SMART_BANNER"
                app:adUnitId="ca-app-pub-3940256099942544/6300978111"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/go_web" />

            <!-- calendar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="600dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adView"
                tools:context=".ViewPagerFragment">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/calendarViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>